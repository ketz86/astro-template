{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
        "@queries/*": ["src/content/queries/*"],
        "@styles/*": ["src/styles/*"],
        "@stores/*": ["src/stores/*"],
        "@layouts/*": ["src/layouts/*"],
        "@blocks/*": ["src/components/blocks/*"],
        "@components/*": ["src/components/*"],
        "@pages/*": ["src/components/pages/*"],
        "@icons/*": ["src/components/icons/*"],
        "@i18n/*": ["src/i18n/*"],
        "@utils/*": ["src/utils/*"],
      }
  }
}